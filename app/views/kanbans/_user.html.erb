<div class="staff">
  <div id="staffed-requests-header" class="staff">
    <%= content_tag(:div, content_tag(:h3, l(:kanban_text_user)), :class => "staffed-column user", :style => "width: #{staffed_column_width(@kanban, :user)}%") %>
    <%= content_tag(:div, content_tag(:h3, l(:kanban_text_active)), :class => "staffed-column active", :style => "width: #{staffed_column_width(@kanban, :active)}%") if @kanban.active_pane.configured? %>
    <%= content_tag(:div, content_tag(:h3, l(:kanban_text_testing)), :class => "staffed-column testing", :style => "width: #{staffed_column_width(@kanban, :testing)}%") if @kanban.testing_pane.configured? %>
    <%= content_tag(:div, content_tag(:h3, l(:kanban_text_finished_requests)), :class => "staffed-column finished", :style => "width: #{staffed_column_width(@kanban, :finished)}%") if @kanban.finished_pane.configured? %>
    <%= content_tag(:div, content_tag(:h3, l(:kanban_text_canceled_requests)), :class => "staffed-column canceled", :style => "width: #{staffed_column_width(@kanban, :canceled)}%") if @kanban.canceled_pane.configured? %>
  </div>
  <div style="clear:both"></div>

  <div id="user-<%= h user.id -%>" class="staffed-column pane user" style="width: <%= staffed_column_width(@kanban, :user) %>%">
    <%= link_to_user(user) %>
    <%= call_hook(:view_kanbans_user_name, :user => user) %>
  </div>
  <% if @kanban.active_pane.configured? %>
    <div id="active-<%= h user.id -%>" class="staffed-column pane active user-<%= h user.id -%>" style="width: <%= staffed_column_width(@kanban, :active) %>%">
      <%= render(:partial => 'active', :locals => {:user => user}) %>
    </div>
  <% end %>
  <% if @kanban.testing_pane.configured? %>
    <div id="testing-<%= h user.id -%>" class="staffed-column pane testing user-<%= h user.id -%>" style="width: <%= staffed_column_width(@kanban, :testing) %>%">
      <%= render(:partial => 'testing', :locals => {:user => user}) %>
    </div>
  <% end %>
  <% if @kanban.finished_pane.configured? %>
    <div id="finished-<%= h user.id -%>" class="staffed-column pane finished user-<%= h user.id -%>" style="width: <%= staffed_column_width(@kanban, :finished) %>%">
      <%= render(:partial => 'finished', :locals => {:user => user}) %>
    </div>
  <% end %>
  <% if @kanban.canceled_pane.configured? %>
    <div id="canceled-<%= h user.id -%>" class="staffed-column pane canceled user-<%= h user.id -%>" style="width: <%= staffed_column_width(@kanban, :canceled) %>%">
      <%= render(:partial => 'canceled', :locals => {:user => user}) %>
    </div>
  <% end %>
  <div style="clear:both"></div>
</div>
